<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="hellofx.TaskCreationController">
    <children>
        <Label text="Create a New Task" />
        <TextField fx:id="titleField" promptText="Title" />
        <TextArea fx:id="contentField" promptText="Content" wrapText="true" />
        <HBox alignment="CENTER" prefHeight="0.0" prefWidth="478.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" prefHeight="18.0" prefWidth="107.0" text="Select Due Date:" textAlignment="CENTER" />
                <DatePicker fx:id="dueDatePicker" prefHeight="26.0" prefWidth="157.0" />
            </children>
        </HBox>
        <Button mnemonicParsing="false" onAction="#handleSaveButtonAction" style="-fx-background-color: #21005D;" text="Create" textFill="WHITE">
        </Button>
    </children>
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
</VBox>
