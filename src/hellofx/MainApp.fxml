                        <String fx:value="scroll-bar" />
                        <String fx:value="decrement-arrow" />
                        <String fx:value="increment-arrow" />
                        <String fx:value="track" />
                        <String fx:value="decrement-button" />
                        <String fx:value="increment-button" />
                        <String fx:value="thumb" />
                     </styleClass>
                  </ScrollBar>
                  <HBox alignment="CENTER_RIGHT" prefHeight="41.0" prefWidth="550.0">
                     <children>
                        <Button mnemonicParsing="false" style="-fx-background-color: #21005D;" text="Create" textFill="WHITE">
                           <HBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </HBox.margin>
