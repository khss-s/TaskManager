<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hellofx.MainAppController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="49.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="31.0" prefWidth="68.0" HBox.hgrow="ALWAYS">
               <children>
                  <ImageView fitHeight="31.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@user%20(1).png" />
                     </image>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </ImageView>
                  <Label fx:id="usernameLabel" prefHeight="86.0" prefWidth="120.0" text="User">
                     <font>
                        <Font name="Poppins Regular" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="31.0" prefWidth="172.0" HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="searchField" promptText="Search for a task" style="-fx-background-color: #fff; -fx-border-color: #B2B2B2;" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="31.0" prefWidth="37.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
               <children>
                  <Label prefHeight="27.0" prefWidth="135.0" textFill="#767676" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Poppins Regular" size="18.0" />
                     </font>
                  </Label>
                  <Hyperlink onAction="#LogOut" prefHeight="24.0" prefWidth="109.0" text="Log Out" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <BorderPane prefHeight="294.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <center>
            <VBox prefHeight="300.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <ScrollPane hbarPolicy="ALWAYS" style="-fx-background-color: #EADDFF; -fx-background-radius: 10px;" VBox.vgrow="ALWAYS">
                     <content>
                        <HBox fx:id="notesContainer" spacing="10" />
                     </content>
                  </ScrollPane>
                  <HBox alignment="CENTER_RIGHT" prefHeight="41.0" prefWidth="550.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleClearAllButtonAction" style="-fx-background-color: #21005D; -fx-text-fill: white;" text="Clear All" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleCreateButtonAction" style="-fx-background-color: #21005D;" text="Create" textFill="WHITE">
                           <HBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Poppins Regular" size="12.0" />
                           </font>
                        </Button>     
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="25.0" right="25.0" top="5.0" />
               </padding>
            </VBox>
         </center>
         <top>
            <HBox alignment="CENTER" prefHeight="42.0" prefWidth="342.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" style="-fx-background-color: transparent;" styleClass="active" stylesheets="@style.css" text="Tasks" textFill="#767676">
                     <font>
                        <Font name="Poppins Regular" size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </top>
      </BorderPane>
   </children>
</VBox>