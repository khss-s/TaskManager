                  <ImageView fitHeight="31.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@user%20(1).png" />
                     </image>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </ImageView>
                  <Label prefHeight="20.0" prefWidth="34.0" text="User">
                     <font>
                        <Font name="Poppins Regular" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="31.0" prefWidth="172.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" style="-fx-background-color: #21005D;" text="Search" textFill="WHITE">
                     <font>
                        <Font name="Poppins Regular" size="12.0" />
                     </font>
                  </Button>
                  <TextField promptText="..." style="-fx-background-color: #fff; -fx-border-color: #B2B2B2;" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="31.0" prefWidth="37.0" HBox.hgrow="ALWAYS">
